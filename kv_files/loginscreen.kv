WindowManager:
    LoginScreen:
    Dashboard:

<LoginScreen>:
    name: "login"

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "User System Check"

        MDBoxLayout:
            size_hint: None, None
            size: root.size[0], root.size[1] - toolbar.height - 100

            MDCard:
                size_hint: None, None
                size: self.parent.size[0], self.parent.size[1]
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                orientation: "vertical"
                padding: "8dp"
                spacing: "20dp"

                canvas:
                    Color:
                        rgba: (1, 1, 1, 1)
                    Rectangle:
                        pos: ((self.parent.size[0]/2) - (340/2) - 10, self.parent.size[1] - 100)
                        size: 350, 140
                        source: 'fusion-logo-vector-01@2x-e1619898835439.png'

                MDLabel:
                    halign: "center"
                    pos_hint: {"center_x": 0.5}
                    spacing: "20dp"

                MDTextField:
                    id: username
                    required: True
                    multiline: False
                    hint_text: "Username"
                    pos_hint: {"center_x": 0.5}
                    size_hint_x: 0.5

                MDTextField:
                    id: passwd
                    required: True
                    multiline: False
                    hint_text: "Password"
                    pos_hint: {"center_x": 0.5}
                    size_hint_x: 0.5

                MDRaisedButton:
                    text: "Submit"
                    md_bg_color: 43/255.0, 194/255.0, 153/255.0, 1
                    pos_hint: {"center_x": 0.5}
                    size_hint_x: 0.2
                    elevation: 20

                Widget:


        MDBottomAppBar:
            MDToolbar:
                id: bottom_toolbar
                title: "Powered By Fusion Bpo Services Pvt Ltd"
                type: "bottom"
                icon: "language-python"
                mode: "end"


        Widget:



