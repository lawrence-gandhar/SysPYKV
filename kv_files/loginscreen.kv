WindowManager:
    LoginScreen:
    Dashboard:

<LoginScreen>:
    name: "login"

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "User System Check"

        MDBoxLayout:
            size_hint: None, None
            size: root.size[0], root.size[1] - toolbar.height - 100

            MDCard:
                size_hint: None, None
                size: self.parent.size[0], self.parent.size[1]
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                orientation: "vertical"
                padding: "8dp"
                spacing: "20dp"

                canvas:
                    Color:
                        rgba: (1, 1, 1, 1)
                    Rectangle:
                        pos: ((self.parent.size[0]/2) - (170/2) - 10, self.parent.size[1] - 50)
                        size: 170, 70
                        source: 'fusion-logo-vector-01@2x-e1619898835439.png'

                MDLabel:
                    text: "Body"




        MDBottomAppBar:
            MDToolbar:
                id: bottom_toolbar
                title: "Powered By Fusion Bpo Services Pvt Ltd"
                type: "bottom"
                icon: "language-python"
                mode: "end"


        Widget:



